<h2>Please create an account to claim your site</h2>

<%= form_for(@user, :as => @user_resource_name, :url => registration_path(@user_resource_name)) do |f| %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label 'Password again, please' %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up" %></p>
<% end %>


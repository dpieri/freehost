<h2 class="maintitle">PREVIEW</h2>
<h2 style="margin-left:360px;" class="maintitle">SIGN UP</h2>
<div class="clear">
<div id="leftarea">
<div id="leftbox" class="site_preview">
	<div id="thumbnail">
		<img src="/images/thumb_loading.gif" style="margin: 100px auto 0 auto; display: block">
	</div>
</div>
<div id="lefttext">
	<%= link_to "http://#{@subdomain.name}.coralrift.com", "http://#{@subdomain.name}.coralrift.com", :class => 'boxed'%>
	<br><br>
	Your site is done! The preview will expire at midnight tomorrow. Sign up
on your right or <%= link_to "login", "/users/sign_in"%> to claim it permanently!
</div>
</div>

<div id="rightbox">
	Register an account to keep this subdomain and manage your websites. Already a member? <%= link_to "Login", "/users/sign_in"%><br><br>
	<%= form_for(@user, :as => @user_resource_name, :url => registration_path(@user_resource_name)) do |f| %>
	  <%= f.label :email, 'Email address'%>
	  <%= f.email_field :email %><br><br>

	  <%= f.label :password %>
	  <%= f.password_field :password %><br><br>

	  <%= f.label 'Confirm password' %>
	  <%= f.password_field :password_confirmation %><br><br>
	
	  <label>&nbsp;</label>
	  <%= f.submit "Sign up" %>
	<% end %>
</div>

<% image_link = link_to image_tag(ApplicationHelper::fetch_thumbnail(@subdomain.name + '.coralrift.com')), "http://#{@subdomain.name}.coralrift.com"%>

<script>
	$(document).ready(function(){
		$("#thumbnail").html("<%= escape_javascript(image_link) %>");
	});
</script>

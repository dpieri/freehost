<%= stylesheet_link_tag "add" %>
<div class="w960">
	<h2 class="maintitle">SIGN IN</h2><br class="clear">
	<div id="rightbox">
		<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		  Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %><br><br>
		<% end -%>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <%= f.label :email %>
		  <%= f.email_field :email %><br><br>

		  <%= f.label :password %>
		  <%= f.password_field :password %><br><br>

		  <% if devise_mapping.rememberable? -%>
		    <%= f.check_box :remember_me %> <%= f.label :remember_me %><br><br>
		  <% end -%>
		  <label>&nbsp;</label>
		  <%= f.submit "Sign in" %><br>
		<% end %>
		<%= render :partial => "devise/shared/links" %>
	</div>
</div>